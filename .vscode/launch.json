  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "tsx",
      "runtimeExecutable": "tsx",
      "program": "${workspaceFolder}/src/index.ts",
      "args": ["news", "INSERT_NEWS_LINK_HERE"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ]
}
